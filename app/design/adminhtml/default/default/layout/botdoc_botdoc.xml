<layout>
   <adminhtml_sales_order_view>
        <reference name="head">
            <action method="addJs">
                <script>botdoc/modal.js</script>
            </action>
        </reference>
    </adminhtml_sales_order_view>
    <adminhtml_botdoc_request>
        <reference name="content">
            <block type="botdoc/adminhtml_request"
                   name='botdoc.adminhtml.request' template="botdoc/request.phtml">
            </block>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
        </reference>
    </adminhtml_botdoc_request>
</layout>