<layout>
    <!-- Documentrequest actions -->
    <adminhtml_botdoc_documentrequest_index>
        <reference name="menu">
            <action method="setActive">
                <menupath>sales/botdoc_botdoc/documentrequest</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="botdoc_botdoc/adminhtml_documentrequest" name="documentrequest" />
        </reference>
    </adminhtml_botdoc_documentrequest_index>
    <adminhtml_botdoc_documentrequest_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="botdoc_botdoc/adminhtml_documentrequest_grid" name="documentrequest_grid"/>
        </block>
    </adminhtml_botdoc_documentrequest_grid>
    <adminhtml_botdoc_documentrequest_edit>
        <update handle="editor"/>
        <reference name="menu">
            <action method="setActive">
                <menupath>sales/botdoc_botdoc/documentrequest</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="botdoc_botdoc/adminhtml_documentrequest_edit" name="documentrequest_edit"></block>
        </reference>
        <reference name="left">
            <block type="botdoc_botdoc/adminhtml_documentrequest_edit_tabs" name="documentrequest_tabs"></block>
        </reference>
    </adminhtml_botdoc_documentrequest_edit>

</layout>
